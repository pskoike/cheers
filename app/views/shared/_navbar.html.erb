<nav class="on-top-of-map">
  <div class="nav-wrapper">
    <%= link_to root_path do %>
      <a href="#" class="brand-logo center">cheers</a>
    <% end %>
    <a href="root_path" data-activates="mobile-demo" class="button-collapse show-on-large">
      <i class="material-icons">menu</i>
    </a>
  <% unless current_user.nil? %>
    <ul class="side-nav" id="mobile-demo">
      <div class="avatar-navbar-wrapper center-align vertical-align">
